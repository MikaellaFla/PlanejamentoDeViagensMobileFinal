<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanejamentoDeViagem.WelcomePage"
             BackgroundColor="#D81414"
             >
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">
            <!-- Imagem do ícone da aplicação -->
            <Image Source="icone.png" HeightRequest="200" WidthRequest="200" />
            <Label Text="Bem-vindo ao seu planejamento de viagens!" FontSize="24" HorizontalOptions="Center" TextColor="White" FontAttributes="Bold"/>
            <!-- Botão de login -->
            <Button Text="Login" Clicked="OnLoginButtonClicked" BackgroundColor="White" TextColor="#D81414" CornerRadius="15" />
            <!-- Botão de se cadastrar -->
            <Button Text="Cadastrar" Clicked="OnRegisterButtonClicked" BackgroundColor="White" TextColor="#D81414" CornerRadius="15"  />
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>