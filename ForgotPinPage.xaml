<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanejamentoDeViagem.ForgotPinPage"
             >
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Recuperar PIN" FontSize="28" HorizontalOptions="Start" Margin="0,10,0,10" TextColor="#D81414" FontAttributes="Bold"/>

        <!-- Campo de inserção do nome de usuário -->
        <Entry x:Name="TxtUsername" Placeholder="Nome de Usuário" BackgroundColor="#D9D9D9"/>

        <!-- Botão para recuperar o PIN -->
        <Button Text="Recuperar PIN" Clicked="OnRecoverPinClicked" BackgroundColor="#D81414" TextColor="White" CornerRadius="15" />
    </VerticalStackLayout>
</ContentPage>
