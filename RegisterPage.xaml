<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanejamentoDeViagem.RegisterPage"
             >
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Cadastrar-se" FontSize="28" HorizontalOptions="Start" Margin="0,10,0,10" TextColor="#D81414" FontAttributes="Bold"/>
        <!-- Campo de inserção do nome de usuário para cadastro -->
        <Entry x:Name="TxtUsername" Placeholder="Usuário" BackgroundColor="#D9D9D9"/>
        <!-- Botão de cadastro do usuário -->
        <Button Text="Cadastrar" Clicked="OnRegisterClicked" BackgroundColor="#D81414" TextColor="White" CornerRadius="15" />
    </VerticalStackLayout>
</ContentPage>